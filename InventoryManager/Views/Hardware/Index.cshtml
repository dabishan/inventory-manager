@model InventoryManager.ViewModel.HardwareList
@{
    ViewBag.Title = "Hardware";
    Layout = "../Shared/_FormLayout.cshtml";
}

@section FormControls {
    <a href="@Url.Action("Add", "Hardware")" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> Add</a>
}

<div class="row">
    <table class="table table-striped table-hover">
        <thead class="">
        <tr>
            <th>Hardware Name</th>
            <th>Hardware Maker</th>
            <th>Purchase Date</th>
            <th class="text-center">Status</th>
            <th class="text-right">Action</th>
        </tr>
        </thead>
        @foreach (var hardware in Model.Hardwares)
        {
            <tr class="">
                <td>@hardware.Inventory.Name</td>
                <td>@hardware.Inventory.Maker.Name</td>
                <td>@hardware.Inventory.PurchaseDate</td>
                <td class="text-center">@hardware.Inventory.Status</td>
                <td class="text-right">
                    <a href="@Url.Action("Show", "Hardware", new {Id = hardware.HardwareId})">
                        <span class="glyphicon glyphicon-eye-open"></span> View
                    </a>
                    &nbsp;
                    <a href="@Url.Action("Edit", "Hardware", new {Id = hardware.HardwareId})">
                        <span class="glyphicon glyphicon-pencil"></span> Edit
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
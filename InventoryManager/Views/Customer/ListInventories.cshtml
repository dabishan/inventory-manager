@model InventoryManager.Models.Customer
@{
    ViewBag.Title = Model.Owner.Name;

    Layout = "../Shared/_FormLayout.cshtml";
}

@section PageHead{
    <h2>Inventory List: 
        <a href="@Url.Action("Show", "Customer", new {Id = Model.Id})">
            @ViewBag.Title
        </a>
    </h2>
    <div class="info">
        <span class="info-type">Total Inventories: </span>
        @Model.Owner.Inventories.Count
    </div>
}

@section MenuControls {
    <ul>
        <li>
            
        </li>
    </ul>
}

<div class="list">
    @if (Model.Owner.Inventories.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="col-sm-6">Name</th>
                    <th class="col-sm-2 text-center">Status</th>
                    <th class="col-sm-2">Created On</th>
                    <th class="col-sm-1 text-right">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inventory in Model.Owner.Inventories)
                {
                    <tr>
                        <td>
                            <a href="#">
                                @inventory.Name
                            </a>
                        </td>
                        <td class="text-center">
                            <span class="label label-@inventory.Status">@inventory.Status</span>
                        </td>
                        <td>@inventory.CreatedOn</td>
                        <td class="text-right">
                            <a href="@Url.Action("Show", "Inventory", new {Id = @inventory.Id})" class="mini-btn">
                                <i class="fa fa-eye"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center">
            No Inventories Assigned to @Model.Owner.Name
        </div>
    }
</div>
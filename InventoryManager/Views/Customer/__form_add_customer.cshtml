@model InventoryManager.ViewModel.CustomerData

@*Form Add Contact*@
<div class="row">
    @Html.LabelFor(c => c.Customer.Name, htmlAttributes: new {@class = "col-sm-3"})
    <div class="col-sm-9">
        <div class="form-group">
            @Html.TextBoxFor(c => c.Customer.Name, htmlAttributes: new {@class = "form-control"})
            @Html.ValidationMessageFor(c => c.Customer.Name, "", new {@class = "text-danger"})
        </div>
    </div>
</div>

<div class="row">
    @Html.LabelFor(c => c.Customer.Description, htmlAttributes: new {@class = "col-sm-3"})
    <div class="col-sm-9">
        <div class="form-group">
            @Html.TextAreaFor(c => c.Customer.Description, htmlAttributes: new {@class = "form-control"})
            @Html.ValidationMessageFor(c => c.Customer.Description, "", new {@class = "text-danger", @rows = "6"})
        </div>
    </div>
</div>

@model InventoryManager.ViewModel.LoginData
@{
    ViewBag.Title = "Login";

    Layout = "../Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.LabelFor(l => l.Username, htmlAttributes: new {@class = "col-sm-3"})
        <div class="col-sm-9">
            <div class="form-group">
                @Html.TextBoxFor(l => l.Username, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessage("Username", "", new {@class = "text-danger", @rows = "6"})
            </div>
        </div>
    </div>

    <div class="row">
        @Html.LabelFor(l => l.Password, htmlAttributes: new {@class = "col-sm-3"})
        <div class="col-sm-9">
            <div class="form-group">
                @Html.PasswordFor(l => l.Password, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessage("Password", "", new {@class = "text-danger", @rows = "6"})
            </div>
        </div>
    </div>

    <div class="controls">
        <button class="btn btn-primary btn-block" type="submit">Login</button>
    </div>
   
}